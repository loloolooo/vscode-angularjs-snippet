{
	"Angular Decorator": {
		"prefix": "ngDecorator",
		"description": "Angular 1.x Decorator\n",
		"body": [
			"(function () {",
			"\t'use strict';",
			"",
			"\tangular",
			"\t\t.module('${module}')",
			"\t\t.config(${decorator}Decorator)",
			"",
			"\tconfig${decorator}Decorator.\\$inject = ['$$provide'];",
			"",
			"\tfunction config${decorator}Decorator($$provide){",
			"\t\tfunction _${targetService}Decorator($$delegate){",
			"",
			"\t\t\tfunction _decoratedTarget() {",
			"\t\t\t\t//pre",
			"\t\t\t\treturn $$delegate.${target}()",
			"\t\t\t\t//post",
			"\t\t\t}",
			"",
			"\t\t\treturn {",
			"\t\t\t\t${target}: _decoratedTarget",
			"\t\t\t}",
			"\t\t}",
			"",
			"\t\t$$provide.decorator(${targetService}, _${targetService}Decorator);",
			"\t}",
			"",
			"}());"
		]
	}
}
