{
	"Angular Directive (Simple)": {
		"prefix": "ngd",
		"body": [
			".directive('${1:${TM_FILENAME_BASE/^(.)([a-zA-Z0-9]*)([_\\W])(.*)/${1:/downcase}${2}${4:/pascalcase}/}}', function () {",
			"\treturn {",
			"\t\trestrict: 'AE',",
			"\t\ttemplateUrl: '${2:$TM_FILENAME_BASE}.template.html',",
			"\t\tscope: {",
			"\t\t\toneWay: '<?', // one-way",
			"\t\t\ttwoWay: '=?',",
			"\t\t\tstring: '@?',",
			"\t\t\tonEvent: '&?', // on-event",
			"\t\t},",
			"\t\tlink: function (\\$scope, \\$element, \\$attrs) {",
			"\t\t\t$0",
			"\t\t},",
			"\t};",
			"})"
		],
		"description": "Angular 1.x Directive (Simple)\n"
	},
	"Angular Directive(Component)": {
		"prefix": "ngDirective",
		"description": "Angular 1.x Directive\n组件型指令(Component)\n",
		"body": [
			"(function () {",
			"\t'use strict';",
			"",
			"\tangular",
			"\t\t.module('${1:name}')",
			"\t\t.directive('${2:${TM_FILENAME_BASE/^(.)([a-zA-Z0-9]*)([_\\W])(.*)/${1:/downcase}${2}${4:/pascalcase}/}}', ${2});",
			"",
			"\t${2}.\\$inject = [];",
			"",
			"\tfunction ${2}() {",
			"\t\tvar directive = {",
			"\t\t\tlink: link,",
			"\t\t\trestrict: 'EA',",
			"\t\t\tscope: {",
			"\t\t\t\toneWay: '<?', // one-way",
			"\t\t\t\ttwoWay: '=?',",
			"\t\t\t\tstring: '@?',",
			"\t\t\t\tonEvent: '&?', // on-event",
			"\t\t\t},",
			"\t\t};",
			"",
			"\t\tfunction link(\\$scope, \\$element, \\$attrs, controller) {",
			"\t\t\t$0",
			"\t\t}",
			"",
			"\t\treturn directive;",
			"\t}",
			"",
			"})();"
		]
	},
	"Angular Directive(Decorator)": {
		"prefix": "ngDirective.Decorator",
		"description": "Angular 1.x Directive\n装饰器型指令(Decorator)\n用 link 函数，不是一个主体，只是附加行为能力，不使用新的作用域或独立的作用域\n",
		"body": [
			"(function () {",
			"\t'use strict';",
			"",
			"\tangular",
			"\t\t.module('${1:name}')",
			"\t\t.directive('${2:${TM_FILENAME_BASE/^(.)([a-zA-Z0-9]*)([_\\W])(.*)/${1:/downcase}${2}${4:/pascalcase}/}}', ${2});",
			"",
			"\t${2}.\\$inject = [];",
			"",
			"\tfunction ${2}() {",
			"\t\tvar directive = {",
			"\t\t\tlink: link,",
			"\t\t\trestrict: 'EA'",
			"\t\t};",
			"",
			"\t\tfunction link(\\$scope, \\$element, \\$attrs) {",
			"\t\t\t$0",
			"\t\t}",
			"",
			"\t\treturn directive;",
			"\t}",
			"",
			"})();"
		]
	}
}
